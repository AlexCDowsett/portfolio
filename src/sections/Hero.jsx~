                    {/*<Leva />*/}
                    <Canvas className="w-full h-full">
                        <Suspense fallback={<CanvasLoader/>}>
                            <PerspectiveCamera makeDefault position={[0, 0, 20]}/>
                            <HeroCamera isMobile={isMobile}>
                                <Model
                                    scale={sizes.modelScale}
                                    position={sizes.modelPosition}
                                    rotation={[-3.2, 4, 0]}/>
